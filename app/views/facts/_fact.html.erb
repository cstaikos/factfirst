<div class="fact-boxes">
  <a href="<%= fact_path(fact) %>" class="fact-box">
    <%= react_component('FactTitle', {url: "#{fact_path( :id => fact.id, :format => :json )}", pollInterval: 5000, title: truncate(fact.body, length: 80)}) %>
    <%= react_component('TruthinessScore', {url: "#{fact_path( :id => fact.id, :format => :json )}", pollInterval: 5000, truthiness: fact.score}, {prerender: true}) %>
    <%= react_component('PopularityScore', {url: "#{fact_path( :id => fact.id, :format => :json )}", pollInterval: 5000, popularity: fact.total_votes}, {prerender: true}) %>
    <%= react_component('FactCategory', {url: "#{fact_path( :id => fact.id, :format => :json )}", pollInterval: 5000, category: fact.category.name}, {prerender: true}) %>
  </a>
  <div class="fact-box-favorite"><span class="fact-box-star" id="favorite-<%= fact.id %>"><%= favorite_button(fact) %></span> <p>Posted by <%= link_to truncate(fact.user.display_name, length: 10), fact.user %> on <%= fact.created_at.strftime("%B %-d, %Y") %></p></div>
</div>
