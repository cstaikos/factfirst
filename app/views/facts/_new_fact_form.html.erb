<div class="add-fact-box">

  <%= form_for @fact do |f| %>

  <div>
    <%= f.label :"New Fact" %><br/>
    <%= f.text_area :body, autofocus: true, :class => 'add-fact-field', placeholder: "Enter new fact here" %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.select  (:category_id) do %>
    <%= content_tag(:option, '-- Category --') %>
    <%= options_from_collection_for_select(@categories, 'id', 'name',:selected => @category) %>
    <% end %>
  </div>

  <div class="add-fact-submit">
    <%= f.submit "Submit New Fact",
    :class => "add-fact-button #{requires_login}"  %>
  </div>

  <% end %>

</div>
