<div class="text-wrapper">
  <h1>Browse facts</h1>

  <%= "Showing results for \"#{params[:query]}\"" if params[:query] %>

  <h2>Categories:</h2>
  <div>
    <ul>
      <li>
        <!-- NOTE: The **SELECTED** bits here should actually be classes applied so the selected category is indicated -->
        <%= link_to 'All', facts_path %><%= "**SELECTED**" unless params[:category] %>
      </li>
      <% @categories.all.each do |category| %>
        <li>
          <%= link_to category.name, facts_path + "?category=#{category.name}" %><%= "**SELECTED**" if category.name == params[:category] %>
        </li>
      <% end %>
    </ul>
  </div>

  <br><br>

  <div class="facts-container">
    <ul id="facts-list">
      <% @facts.each do |fact| %>
        <%= render fact %>
      <% end %>
    </ul>
  </div>
</div>
