<div class="text-wrapper">

  <span class="prefact">Fact posted by <%= link_to @fact.user.display_name, @fact.user %> on <%= @fact.created_at.strftime("%B %-d, %Y") %> | Category: <%= @fact.category.name %></span>
  <div class="fact-header">
    <span class="fact-show">
        <%= @fact.body %>
    </span>
    <span class="truth-score"><%= @fact.score %></span>
    <span class="truth-dial">Dial goes here</span>
  </div>


  <div class="evidence">
    <div class="supporting">
      <h1 class="evidence-header-text">Supporting Evidence (<%= @fact.supporting_evidence.count %>)</h1>
      <ul class="evidence-list">
        <% @fact.supporting_evidence.each do |evidence| %>
          <li class="piece-of-evidence">

            <div id="vote-box-<%= evidence.id %>" class="vote-box">
              <%= render 'vote_buttons', evidence: evidence %>
            </div>
            <div class="show-evidence">
              <h4><%= evidence.url%></h4>
              <p>Posted by <%= link_to evidence.user.display_name, evidence.user %></p>
            </div>

        </li>
      <% end %>
      </ul>
      <div>
        <h4>Add supporting evidence:</h4>
        <%= form_for [@fact, @evidence] do |f| %>
          <div>
            <%= f.label :url %>
            <%= f.url_field :url %>
          </div>

          <%= f.hidden_field :support, value: true %>

          <div>
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="refuting">
      <h1 class="evidence-header-text">Refuting Evidence (<%= @fact.refuting_evidence.count %>)</h1>
      <ul class="evidence-list">
        <% @fact.refuting_evidence.each do |evidence| %>
          <li class="piece-of-evidence">
            <h4><%= evidence.url%></h4>
            <p>Posted by <%= link_to evidence.user.display_name, evidence.user %></p>

            <div id="vote-box-<%= evidence.id %>" class="vote-box">
              <%= render 'vote_buttons', evidence: evidence %>
            </div>

        </li>
      <% end %>
      </ul>
      <div>
        <h4>Add refuting evidence:</h4>
        <%= form_for [@fact, @evidence] do |f| %>
          <div>
            <%= f.label :url %>
            <%= f.url_field :url %>
          </div>

          <%= f.hidden_field :support, value: false %>

          <div>
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <% if current_user == User.find(@fact.user_id)  %>
    <%= link_to "Delete Fact", fact_path(@fact), method: :delete, date: {confirm:"Are you sure you want to delete this
    fact?"} %>
  <% end  %>


  <div style="clear:both;">
    <p>
      <strong>
        Share a permalink image of this fact on another site: <%= root_url[0..-2] + asset_path("fact_photos/#{@fact.id}.png") %>
      </strong>
    </p>
    <div id="fact-image">
      <%= image_tag "fact_photos/#{@fact.id}.png", width: 400 %>
    </div>
  </div>

  <div>
    <h2>Add a comment to discuss this fact:</h2>
    <%= render 'comments/comment_form' %>
  </div>

  <div id="comments">
    <%= render @fact.comments %>
  </div>

</div>

</div>
