<!DOCTYPE html>
<html>
<head>
  <title>FactFirst</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper">

  <%= render 'refills/navigation' %>

  <div class="flash-notifications">
    <div id="alert"><%= flash[:alert] %></p>
    <div id="notice"><%= flash[:notice] %></p>
  </div>

    <!--NOTE: Refactor using helpers-->
  <p><%= link_to "Facts Index", facts_path %> | <%= link_to "New Fact", new_fact_path %></p>
  <% if user_signed_in? %>
      <p><%= link_to('Logout', destroy_user_session_path, :method => :delete)%></p>
  <% else %>
     <p><%= link_to('Login', new_user_session_path)%></p>
  <% end %>

<%= yield %>

</div>

</body>
</html>
