<header class="navigation nav-bg" role="banner">
  <div class="navigation-wrapper">
    <a href="<%= root_path %>" class="logo">
      <%= image_tag("truthometer-logo-large-01.png", alt: 'Truthometer', class: 'img-logo') %>
    </a>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <div class="search-bar">
        <form role="search" action="/facts">
          <input name="query" type="search" id="search" placeholder="Search Facts" />
          <button type="submit">
            <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="Search Icon">
          </button>
        </form>
      </div>
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><a href="<%= facts_path %>">Browse Facts</a></li>
        <li class="nav-link"><a href="<%= new_fact_path %>">Add New Fact</a></li>
        <li class="nav-link"><a href="<%= about_path %>">About</a></li>
      </ul>
    </nav>
    <div class="navigation-tools">

      <% if user_signed_in? %>
          <!--NOTE enter user_path when created -->
          <span id="welcome-message">Welcome, <%= link_to current_user.display_name, user_path(current_user) %></span>
            <span><%= image_tag "http://www.gravatar.com/avatar/#{current_user.gravatar_hash}",
                width: '20',
                height:'20',
                id: "user-image-nav"%></span>


          <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "logout" )%>
      <% else %>
          <!--<a href="<%# new_user_session_path %>" class="login">Login</a>-->
          <!--<a href="<%# new_user_registration_path %>" class="sign-up">Sign Up</a>-->
          <%= render 'refills/modal' %>
    <% end %>

    </div>
  </div>
</header>

